<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.iu.eego.CommunityChallengeActivity"
    tools:showIn="@layout/activity_community_challenge">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_face_bkd"
    android:minWidth="360dp"
    android:maxHeight="560dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Community Challenge"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="October 18, 2017"
        />

    <ImageView
        android:id="@+id/progress"
        android:layout_width="60dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editText2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/community"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="42,660/50,000"
            android:textColor="#ffffff"
            android:id="@+id/calmSeconds"
            android:layout_below="@id/progress"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:text="+400"
            android:textColor="#ffffff"
            android:id="@+id/secondsProgress"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="230dp"
            android:layout_alignTop="@+id/item2"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/calmChallengetext"
            android:text="Challenge: 50,000 calm seconds"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginTop="21dp"
            android:layout_below="@id/calmSeconds"
            android:gravity="center"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Finish"
            android:id="@+id/finish"
            android:textAllCaps="false"
            android:background="#f5a623"
            android:textColor="#ffffff"
            android:layout_below="@id/calmChallengetext"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="130dp"
            />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
