<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogMuses"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/selectYourHeadset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your headset..."
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/selectYourHeadset"
        android:id="@+id/museHeadSetLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muse 1"
            android:textColor="#f5a623"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muse 2"
            android:textColor="#f5a623"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muse 3"
            android:textColor="#f5a623"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            />
    </LinearLayout>

    <Button
        android:layout_width="280dp"
        android:id="@+id/refreshBtn"
        android:textAllCaps="false"
        android:layout_below="@+id/museHeadSetLayout"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="Refresh"
        android:layout_height="35dp"
        android:fontFamily="Roboto-Regular"
        android:background="#f5a623"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>