<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.iu.eego.OverallProgressActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_face_bkd"
        android:id="@+id/showprogress">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="192dp"
            android:id="@+id/graphHR"
            android:src="@drawable/eeg_graph"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalSec"
            android:text="Total Seconds: "
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="52dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalSecVal"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calmSec"
            android:text="Calm Seconds: "
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="52dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calmSecVal"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numRecoveries"
            android:text="Recoveries: "
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="52dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numRecoveriesVal"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="130dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/avgHeartRate"
            android:text="Average Heart Rate: "
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="52dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/avgHeartRateVal"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="180dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textBpm"
            android:text="bpm"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="210dp"/>
        <Button
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:text="Add to Community Challenge"
            android:textAllCaps="false"
            android:background="#f5a623"
            android:textColor="#ffffff"
            android:id="@+id/addToCommunity"
            android:layout_marginTop="42dp"
            android:layout_below="@id/textBpm"
            android:layout_marginLeft="65dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>